@using Sistema.lib.Entities
@using System.Security.Claims
@{
    ViewBag.Title = "Home Page";
    var identity = (ClaimsIdentity)User.Identity;
    IEnumerable<Claim> claims = identity.Claims;
}

@if (TempData["IsSuccess"] != null)
{
    <div class="alert alert-success">@TempData["IsSuccess"]</div>
}
@if (TempData["IsError"] != null)
{
    <div class="alert alert-danger">@TempData["IsError"]</div>
}


<main>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <link rel="stylesheet" href="~/css/site.css" />




    @if (!User.Identity.IsAuthenticated)
    {
        <section class="row text-center" aria-labelledby="aspnetTitle">
            <h1 id="title">Sistema de gestion de empresas</h1>
            <p class="lead">Desde aquí podras controlar tu empresa.</p>
        </section>
    }
    else
    {
        <div class="dashboard-container">
            <main class="main-content">
                <header class="header">
                    <h1>Dashboard</h1>
                    <p>Sales overview & summary</p>
                    <div class="filters">
                        <select>
                            <option>Order type</option>
                        </select>
                        <select>
                            <option>Last year</option>
                        </select>
                    </div>
                </header>
                <section class="stats">
                    <div class="stat-item">
                        <div class="stat-icon"><i class="fas fa-download"></i></div>
                        <div class="stat-info">
                            <h3>101.1K</h3>
                            <p>Downloads</p>
                        </div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon"><i class="fas fa-shopping-cart"></i></div>
                        <div class="stat-info">
                            <h3>12.2K</h3>
                            <p>Purchases</p>
                        </div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon"><i class="fas fa-users"></i></div>
                        <div class="stat-info">
                            <h3>5.3K</h3>
                            <p>Customers</p>
                        </div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon"><i class="fas fa-chart-bar"></i></div>
                        <div class="stat-info">
                            <h3>7</h3>
                            <p>Channels</p>
                        </div>
                    </div>
                </section>
                <section class="charts">
                    <div class="chart">
                        <h3>Revenue Breakdown</h3>
                        <p>Compared to previous year</p>
                        <div class="chart-content">
                            <canvas id="revenueChart"></canvas>
                        </div>
                    </div>
                    <div class="chart">
                        <h3>Segments</h3>
                        <p>Revenue sources</p>
                        <div class="chart-content">
                            <canvas id="segmentsChart"></canvas>
                        </div>
                    </div>
                </section>
                <section class="additional-info">
                    <div class="info-box">
                        <h3>Privacy Suggestions</h3>
                        <p>Take our privacy checkup to choose which settings are right for you.</p>
                    </div>
                    <div class="info-box">
                        <h3>Account Storage</h3>
                        <p>Your account storage is shared across all devices. 10 GB of 30 GB used</p>
                    </div>
                </section>
            </main>
        </div>

    }


    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>

        window.onload = function () {
            var ctx1 = document.getElementById('revenueChart').getContext('2d');
            var revenueChart = new Chart(ctx1, {
                type: 'bar',
                data: {
                    labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                    datasets: [{
                        label: 'Revenue',
                        data: [10000, 15000, 20000, 25000, 30000, 35000],
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            var ctx2 = document.getElementById('segmentsChart').getContext('2d');
            var segmentsChart = new Chart(ctx2, {
                type: 'pie',
                data: {
                    labels: ['Alpha', 'Beta', 'Gamma', 'Delta'],
                    datasets: [{
                        label: 'Revenue Sources',
                        data: [30, 20, 25, 25],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true
                }
            });
        }
    </script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .dashboard-container {
            display: flex;
        }

        .sidebar {
            width: 250px;
            background-color: #333;
            color: #fff;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .sidebar-header {
            padding: 20px;
            background-color: #444;
        }

        .sidebar-menu {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            .sidebar-menu li {
                padding: 15px 20px;
            }

                .sidebar-menu li a {
                    color: #fff;
                    text-decoration: none;
                }

        .sidebar-footer {
            padding: 20px;
            background-color: #444;
            text-align: center;
        }

        .main-content {
            flex: 1;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .header h1 {
                margin: 0;
            }

        .filters select {
            padding: 5px;
            margin-left: 10px;
        }

        .stats {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .stat-item {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
        }

        .stat-icon {
            font-size: 2em;
            margin-right: 20px;
        }

        .stat-info h3 {
            margin: 0;
            font-size: 1.5em;
        }

        .stat-info p {
            margin: 0;
            color: #888;
        }

        .charts {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .chart {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 48%;
        }

        .chart-content {
            margin-top: 20px;
        }

        .additional-info {
            display: flex;
            justify-content: space-between;
        }

        .info-box {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 48%;
        }
    </style>
</main>